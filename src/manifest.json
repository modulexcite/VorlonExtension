{
  "manifest_version": 2,

  "name": "Vorlon Browser Extension",
  "description": "This extension helps loading the Vorlon.js plug-ins inside MS Edge or Chrome",
  "version": "1.0",
  
  "icons": { "16": "icons/vorlonicon16.png",
           "48": "icons/vorlonicon48.png",
          "128": "icons/vorlonicon128.png" },

  "browser_action": {
      "default_icon": {                    
            "19": "icons/vorlonicon19.png",           
            "38": "icons/vorlonicon38.png"            
          }
  },
  "background": {
      "scripts": ["vorlonBrowserExtension.browserAction.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["vorlonBrowserExtension.runtime.js", "plugins/modernizrReport/modernizr.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "web_accessible_resources": [
     "*.js"
  ]
}