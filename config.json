{
  "build": {
    "declarationFilename": "vorlonExtension.d.ts",
    "runtimeFilename": "vorlonExtension.runtime.js",
    "outputDirectory": "dist/vorlonExtension",
    "outputDirectoryForFirefox": "dist",
    "firefoxFilename": "vorlonExtension.xpi"
  },
  "core": {
    "files": [
     "src/manifest.json",
     "src/pluginscatalog.json",
     "src/**/*.html",
     "src/**/*.png",
     "src/**/*.eot",
     "src/**/*.svg",
     "src/**/*.otf",
     "src/**/*.ttf",
     "src/**/*.woff2",
     "src/**/*.woff",
     "src/**/*.css",
     "src/**/*.js"
    ],
    "typescript": [
      "src/**/*.ts"
    ],
    "watch": [
      "src/**/*.ts",
      "src/**/*.json",
      "src/**/*.css",
      "src/**/*html"
    ]
  }
}